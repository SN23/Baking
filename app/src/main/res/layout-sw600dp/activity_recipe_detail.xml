<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="horizontal">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <FrameLayout
            android:id="@+id/recipe_details_container"
            android:layout_width="@dimen/recipe_details_container_layout_width"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/recipe_step_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recipe_step_container_layout_margin"
        android:padding="@dimen/recipe_step_container_padding"
        android:scaleType="centerInside" />

</LinearLayout>