<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fragment_recipe_details_constraint_layout_padding_bottom"
    tools:context=".RecipeDetailsFragment">

    <TextView
        android:id="@+id/IngredientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_recipe_details_ingredient_title_margin_end"
        android:layout_marginStart="@dimen/fragment_recipe_details_ingredient_title_margin_start"
        android:layout_marginTop="@dimen/fragment_recipe_details_ingredient_title_margin_top"
        android:text="@string/ingredients"
        android:textSize="@dimen/fragment_recipe_details_ingredient_title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredientsTV"
        android:layout_width="@dimen/fragment_recipe_details_ingredient_tv_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_recipe_details_ingredient_tv_margin_end"
        android:layout_marginStart="@dimen/fragment_recipe_details_ingredient_tv_margin_start"
        android:layout_marginTop="@dimen/fragment_recipe_details_ingredient_tv_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IngredientTitle" />

    <TextView
        android:id="@+id/stepsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fragment_recipe_details_steps_title_margin_end"
        android:layout_marginStart="@dimen/fragment_recipe_details_steps_title_margin_start"
        android:layout_marginTop="@dimen/fragment_recipe_details_steps_title_margin_top"
        android:text="@string/Steps"
        android:textSize="@dimen/fragment_recipe_details_steps_title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsTV" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_steps_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_recipe_details_recipe_steps_recycler_view_margin_bottom"
        android:layout_marginEnd="@dimen/fragment_recipe_details_recipe_steps_recycler_view_margin_end"
        android:layout_marginStart="@dimen/fragment_recipe_details_recipe_steps_recycler_view_margin_start"
        android:layout_marginTop="@dimen/fragment_recipe_details_recipe_steps_recycler_view_margin_top"
        android:paddingBottom="@dimen/fragment_recipe_details_recipe_steps_recycler_view_padding_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsTitle" />

</android.support.constraint.ConstraintLayout>